@using MVC_Project._DataLayer.Models
@{
    ViewData["Title"] = "Delete";
}

@model Expense

<div class="text-center">
    <h3>Are you sure you want to delete this expense record ? </h3>
    <label>Description:</label>
    <label>@Model.Description</label>
    <br />
    <label>Value:</label>
    <label>@Model.Value</label>

    <form asp-action="Delete" asp-controller="Expense" method="post">
        <input hidden type="number" class="form-control" asp-for="Id" />
        <input class="btn btn-primary" type="submit" value="Confirm" />
        <a class="btn btn-secondary" asp-action="Overview">Cancel</a>
    </form>
</div>
