@using MVC_Project._DataLayer.Models
@{
    ViewData["Title"] = "Create/Update";
}

@model Income;

<div class="text-center">
    <h2>Create or Update income</h2>
</div>

<form asp-controller="Income" asp-action="UpsertForm" method="post">
    <label hidden></label>
    <input hidden type="number" class="form-control" asp-for="Id" />

    <label>Income Name</label>
    <input required type="text" class="form-control" asp-for="Name" /> <!-- asp-for tregon me ke prop te modelit do lidhet -->

    <label>Value</label>
    <input required type="number" step="0.01" class="form-control" asp-for="Value" />

    <label>Description</label>
    <input type="text" class="form-control" asp-for="Description" />

    <label>Date</label>
    <input required type="date" class="form-control" asp-for="IncomeDate" />

    <label>Category</label>
    <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
        <option selected="selected" value="">Select Category</option>
    </select>

    <input class="btn btn-primary mb-2 mt-4" type="submit" value="Save" />
</form>
