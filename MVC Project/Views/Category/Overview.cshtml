@using MVC_Project._DataLayer.Models
@{
    ViewData["Title"] = "Overview";
}

@model List<Category>

<div class="text-center">
    <a class="btn btn-primary mb-3 mt-3" asp asp-controller="Category" asp-action="Upsert">Create Category</a>
    <h3 class="mb-4">Categories</h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Type</th>
                <th>IsActive</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>@category.Type</td>
                    <td>
                        <input type="checkbox" value="@category.IsActive" checked="@category.IsActive" disabled/>
                    </td>

                    <td>
                        <a class="btn btn-warning" asp-action="Upsert" asp-route-id="@category.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>