@using MVC_Project._DataLayer.Models
@{
    ViewData["Title"] = "Delete";
}

@model Category

<div class="text-center">
    <h3>Are you sure you want to delete this Category ? </h3>
    <label>Name:</label>
    <label>@Model.Name</label>
    <br />
    <label>Description:</label>
    <label>@Model.Description</label>

    <form asp-action="Delete" asp-controller="Category" method="post">
        <input hidden type="number" class="form-control" asp-for="Id" />
        <input class="btn btn-primary" type="submit" value="Confirm" />
        <a class="btn btn-secondary" asp-action="Overview">Cancel</a>
    </form>
</div>